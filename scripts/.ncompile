#!/bin/bash

WHT="\e[1;37m"
FIN="\e[0m"

focal-ncompile(){
sudo apt install -y build-essential bison bc git dialog patch \
	dosfstools zip unzip qemu debootstrap qemu-user-static rsync \
	kmod cpio flex libssl-dev libncurses5-dev parted fakeroot swig \
	aria2 pv toilet figlet distro-info-data lsb-release xz-utils curl \
	e2fsprogs btrfs-progs kpartx xfsprogs fdisk debian-archive-keyring \
	debian-keyring make libelf-dev gcc-8 gcc-9 gcc-10
}

jammy-ncompile(){
sudo apt install -y build-essential bison bc git dialog patch \
	dosfstools zip unzip qemu debootstrap qemu-user-static rsync \
	kmod cpio flex libssl-dev libncurses5-dev parted fakeroot swig \
	aria2 pv toilet figlet distro-info-data lsb-release xz-utils curl \
	e2fsprogs btrfs-progs kpartx xfsprogs fdisk debian-archive-keyring \
	debian-keyring make libelf-dev gcc-9 gcc-10 gcc-11 gcc-12
}

bullseye-ncompile(){
sudo apt install -y build-essential bison bc git dialog patch fdisk \
	dosfstools zip unzip qemu debootstrap qemu-user-static rsync \
	kmod cpio flex libssl-dev libncurses5-dev parted fakeroot swig \
	aria2 pv toilet figlet distro-info-data lsb-release xz-utils curl \
	e2fsprogs btrfs-progs xfsprogs kpartx make libelf-dev zstd gcc-9 gcc-10
}

if [[ `uname -m | grep -w x86_64` ]]; then
	echo ""
	echo -e "${WHT}Host Machine: x86-64${FIN}"
	echo -e "${WHT}Please run:${FIN} make ccompile"
	echo ""
	exit > /dev/null 2>&1;
fi

if [[ `grep -w "focal" "/etc/os-release"` ]]; then
	echo ""
	focal-ncompile;
else
	if [[ `grep -w "jammy" "/etc/os-release"` ]]; then
		echo ""
		jammy-ncompile;
	else
		if [[ `grep -w "bullseye" "/etc/os-release"` ]]; then
			echo ""
			bullseye-ncompile;
		else
			echo ""
			echo -e "${WHT}What OS are you running?${FIN}"
			echo ""
			exit > /dev/null 2>&1;
		fi
	fi
fi
