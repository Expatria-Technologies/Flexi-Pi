#!/bin/bash

WHT="\e[1;37m"
FIN="\e[0m"

focal-ccompile64(){
sudo apt install -y build-essential bison bc git dialog patch dosfstools \
	zip unzip qemu debootstrap qemu-user-static rsync kmod cpio flex \
	libssl-dev libncurses5-dev parted fakeroot swig aria2 pv toilet figlet \
	distro-info-data lsb-release xz-utils curl e2fsprogs btrfs-progs kpartx \
	debian-archive-keyring crossbuild-essential-armel crossbuild-essential-armhf \
	gcc-8-arm-linux-gnueabi gcc-9-arm-linux-gnueabi gcc-10-arm-linux-gnueabi \
	gcc-8-arm-linux-gnueabihf gcc-9-arm-linux-gnueabihf gcc-10-arm-linux-gnueabihf \
	gcc-8 gcc-9 gcc-10 debian-keyring make libelf-dev xfsprogs fdisk
}

jammy-ccompile64(){
sudo apt install -y build-essential bison bc git dialog patch dosfstools \
	zip unzip qemu debootstrap qemu-user-static rsync kmod cpio flex \
	libssl-dev libncurses5-dev parted fakeroot swig aria2 pv toilet figlet \
	distro-info-data lsb-release xz-utils curl e2fsprogs btrfs-progs kpartx \
	debian-archive-keyring crossbuild-essential-armel crossbuild-essential-armhf \
	gcc-9-arm-linux-gnueabi gcc-10-arm-linux-gnueabi gcc-11-arm-linux-gnueabi \
	gcc-9-arm-linux-gnueabihf gcc-10-arm-linux-gnueabihf gcc-11-arm-linux-gnueabihf \
	gcc-12-arm-linux-gnueabi gcc-12-arm-linux-gnueabihf gcc-9 gcc-10 gcc-11 gcc-12 \
	debian-keyring make libelf-dev xfsprogs fdisk
}

bullseye-ccompile64(){
sudo apt install -y build-essential bison bc git dialog patch kpartx zstd \
	dosfstools zip unzip qemu debootstrap qemu-user-static rsync make fdisk \
	kmod cpio flex libssl-dev libncurses5-dev parted fakeroot swig libelf-dev \
	crossbuild-essential-armel crossbuild-essential-armhf aria2 pv toilet \
	distro-info-data lsb-release xz-utils curl e2fsprogs btrfs-progs xfsprogs \
	figlet gcc-9 gcc-10 gcc-9-arm-linux-gnueabihf gcc-10-arm-linux-gnueabihf \
	gcc-9-arm-linux-gnueabi gcc-10-arm-linux-gnueabi
}

if [[ `uname -m | grep -w x86_64` ]]; then
	echo ""
	echo -e "${WHT}Host Machine: x86-64${FIN}"
	echo -e "${WHT}Please run:${FIN} make ccompile"
	echo ""
	exit > /dev/null 2>&1;
fi

if [[ `grep -w "focal" "/etc/os-release"` ]]; then
	echo ""
	focal-ccompile64;
else
	if [[ `grep -w "jammy" "/etc/os-release"` ]]; then
		echo ""
		jammy-ccompile64;
	else
		if [[ `grep -w "bullseye" "/etc/os-release"` ]]; then
			echo ""
			bullseye-ccompile64;
		else
			echo ""
			echo -e "${WHT}What OS are you running?${FIN}"
			echo ""
			exit > /dev/null 2>&1;
		fi
	fi
fi
