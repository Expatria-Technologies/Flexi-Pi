#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DEBIAN_VERSION="buster"
VERSION="5.4.y"
menuconfig="0"
crosscompile="1"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" \
	  --backtitle "Raspberry Pi Image Builder | Administrator" \
	  --title "Config Menu" \
	  --form "Choose:" \
11 32 4 \
	"Debian:"	1 1	"$DEBIAN_VERSION"  	1 10 18 0 \
        "Branch:"   	2 1     "$VERSION"        	2 10 7 0 \
	"Menuconfig:"	3 1	"$menuconfig"  		3 14 2 0 \
	"Crosscompile:" 4 1	"$crosscompile" 	4 14 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo DEBIAN_VERSION='"' >> tmp0
echo VERSION='"' >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo admin=1 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "${RED}userdata file created.${FIN}"
echo
