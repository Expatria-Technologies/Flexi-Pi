#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
user="pi"
passwd="board"
DISTRO_VERSION="buster"
VERSION="5.4.y"
menuconfig="0"
crosscompile="1"
debian="1"
devuan="0"
ubuntu="0"
rtl88XXau="0"
rtl88X2bu="0"
rtl88XXcu="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Raspberry Pi Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
23 40 16 \
	"Username:"	1 1	"$user" 		1 11 14 0 \
	"Password:"	2 1	"$passwd"  		2 11 14 0 \
        "Branch:"   	3 1     "$VERSION"        	3 9 7 0 \
	"Menuconfig:"	4 1	"$menuconfig"  		4 13 2 0 \
	"Crosscompile:" 5 1	"$crosscompile" 	5 15 2 0 \
	""		6 1	""	 		6 14 0 0 \
	"Distributions"	7 1	""	 		7 14 0 0 \
	"Release:"	8 1	"$DISTRO_VERSION"  	8 10 15 0 \
	"Debian:"	9 1	"$debian" 		9 9 2 0 \
	"Devuan:"	10 1	"$devuan" 		10 9 2 0 \
	"Ubuntu:"	11 1	"$ubuntu"	 	11 9 2 0 \
	""		12 1	""	 		12 14 0 0 \
	"Wireless"	13 1	""	 		13 14 0 0 \
	"rtl88XXau:"	14 1	"$rtl88XXau"	 	14 12 2 0 \
	"rtl88X2bu:"	15 1	"$rtl88X2bu"	 	15 12 2 0 \
	"rtl88XXcu:"	16 1	"$rtl88XXcu"	 	16 12 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo VERSION='"' >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo debian= >> tmp0
echo devuan= >> tmp0
echo ubuntu= >> tmp0
echo rtl8812au= >> tmp0
echo rtl88x2bu= >> tmp0
echo rtl8811cu= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo verbose=0 >> tmp0
echo rpiuser=1 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
