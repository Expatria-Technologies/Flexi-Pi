#!/bin/bash
### DO NOT EDIT
OUTPUT="output/bcm2711v7"
DIALOG_CANCEL=1
DIALOG_ESC=255

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Raspberry Pi Image Builder \ Raspberry Pi 4B/400 (ARMHF)" \
    --title "  Raspberry Pi 4B/400" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" 0 28 0 \
    "1" "Make All" \
    "2" "Make Kernel" \
    "3" "Make ROOTFS" \
    "4" "Make Image" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      make all
      dialog --prgbox "Results:" "ls rpi-4*.img* *armhf* $OUTPUT/" 30 70
      exit 0
      ;;
    2 )
      make select
      dialog --prgbox "Results:" "ls $OUTPUT/*.deb" 30 70
      ;;
    3 )
      make rootfs
      dialog --prgbox "Results:" "ls *armhf*" 30 70
      ;;
    4 )
      make image
      dialog --prgbox "Results:" "ls rpi-4*.img*" 30 70
      ;;
  esac
done
