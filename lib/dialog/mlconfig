#!/bin/bash
### DO NOT EDIT
BRED="\e[1;31m"
RED="\e[0;31m"
FIN="\e[0m"
user=""
passwd=""
rootpasswd="0"
VERSION="5.14.6"
rc="0"
menuconfig="0"
crosscompile="1"
gcc="1"
ccache="0"
clang="0"
DISTRO="debian"
DISTRO_VERSION="bullseye"
ext4="1"
btrfs="0"
xfs="0"
custom_defconfig="0"
MYCONFIG=""

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Create a Mainline user data file" \
	  --title "Config Menu" \
	  --form "Choose:" 0 36 0 \
	"Username:"	1 1	"$user" 		1 11 14 0 \
	"Password:"	2 1	"$passwd"  		2 11 14 0 \
	"Enable root:"	3 1	"$rootpasswd"  		3 14 2 0 \
	""		4 1	""	 		4 14 0 0 \
	"Linux kernel"	5 1	""	 		5 14 0 0 \
        "Branch:"   	6 1     "$VERSION"        	6 9 10 0 \
        "RC:"		7 1     "$rc"			7 5 2 0 \
	"Menuconfig:"	8 1	"$menuconfig"  		8 13 2 0 \
	"Crosscompile:" 9 1	"$crosscompile" 	9 15 2 0 \
	""		10 1	""	 		10 14 0 0 \
	"Compiler"	11 1	""	 		11 14 0 0 \
	"GCC:"		12 1	"$gcc"		 	12 9 2 0 \
	"Ccache:"	13 1	"$ccache"	 	13 9 2 0 \
	"Clang:"	14 1	"$clang"	 	14 9 2 0 \
	""		15 1	""	 		15 14 0 0 \
	"Distribution"	16 1	""	 		16 14 0 0 \
	"Distro:"	17 1	"$DISTRO"	  	17 10 15 0 \
	"Release:"	18 1	"$DISTRO_VERSION"  	18 10 15 0 \
	""		19 1	""	 		19 14 0 0 \
	"Filesystem"	20 1	""	 		20 14 0 0 \
	"ext4:"		21 1	"$ext4"		 	21 8 2 0 \
	"btrfs:"	22 1	"$btrfs"	 	22 8 2 0 \
	"xfs:"		23 1	"$xfs"		 	23 8 2 0 \
	""		24 1	""	 		24 14 0 0 \
	"Customize"	25 1	""	 		25 14 0 0 \
	"Defconfig:"	26 1	"$custom_defconfig" 	26 12 2 0 \
	"Name:"		27 1	"$MYCONFIG"	  	27 7 20 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo rootpasswd= >> tmp0
echo VERSION='"' >> tmp0
echo rc= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo gcc= >> tmp0
echo ccache= >> tmp0
echo clang= >> tmp0
echo DISTRO='"' >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo ext4= >> tmp0
echo btrfs= >> tmp0
echo xfs= >> tmp0
echo custom_defconfig= >> tmp0
echo MYCONFIG='"' >> tmp0
echo userscripts=0 >> tmp0
echo verbose=0 >> tmp0
echo CLANG_LLVM='"'LLVM=1 LLVM_IAS=1'"' >> tmp0
echo lto_clang_thin=0 >> tmp0
echo CFLAGS='"''"' >> tmp0
echo "set_locales(){" >> tmp0
echo "apt install -y locales" >> tmp0
echo "export LANGUAGE=en_US.UTF-8" >> tmp0
echo "export LANG=en_US.UTF-8" >> tmp0
echo "export LC_ALL=C.UTF-8" >> tmp0
echo "locale-gen en_US.UTF-8" >> tmp0
echo "}" >> tmp0
echo "set_timezone(){" >> tmp0
echo "ln -snf /usr/share/zoneinfo/America/New_York /etc/localtime" >> tmp0
echo "echo -n 'America/New_York' > /etc/timezone" >> tmp0
echo "}" >> tmp0
echo devuser=1 >> tmp0
echo builder=3.14 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo _defconfig'"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# categories
sed -i '4i### LINUX KERNEL' userdata.txt
sed -i '9i### COMPILER' userdata.txt
sed -i '13i### DISTRIBUTION' userdata.txt
sed -i '16i### FILESYSTEM' userdata.txt
sed -i '20i### CUSTOM' userdata.txt
sed -i '25i### CLANG/LLVM' userdata.txt
sed -i '28i### COMPILER TUNING' userdata.txt
sed -i '30i### LOCALES' userdata.txt
sed -i '38i### TIMEZONE' userdata.txt
sed -i '43i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
