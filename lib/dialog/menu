#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DIALOG_CANCEL=1
DIALOG_ESC=255

while true; do
  exec 3>&1
  selection=$(dialog --colors \
    --backtitle "Raspberry Pi Image Builder" \
    --title "Boards" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" 0 40 0 \
    "1" "Raspberry Pi 4 (ARM64)" \
    "2" "Raspberry Pi 4 (ARMHF)" \
    "3" "Raspberry Pi 3/A/B/+" \
    "4" "Raspberry Pi 2/3/A/B/+" \
    "5" "Raspberry Pi 0/W/B/+" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo -e "${RED}Program terminated${FIN}."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo -e "${RED}Program aborted${FIN}." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo -e "%{RED}Program terminated${FIN}."
      ;;
    1 )
      chmod +x lib/dialog/rpi4
      ./lib/dialog/rpi4
      ;;
    2 )
      chmod +x lib/dialog/rpi4v7
      ./lib/dialog/rpi4v7
      ;;
    3 )
      chmod +x lib/dialog/rpi3
      ./lib/dialog/rpi3
      ;;
    4 )
      chmod +x lib/dialog/rpi2+3
      ./lib/dialog/rpi2+3
      ;;
    5 )
      chmod +x lib/dialog/rpi
      ./lib/dialog/rpi
      ;;
  esac
done
