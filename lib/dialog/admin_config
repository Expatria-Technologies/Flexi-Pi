#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DISTRO_VERSION="buster"
VERSION="5.4.y"
menuconfig="0"
crosscompile="1"
debian="1"
devuan="0"
ubuntu="0"
rtl88XXau="0"
rtl88X2bu="0"
rtl88XXcu="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Raspberry Pi Image Builder | Administrator" \
	  --title "Config Menu" \
	  --form "Choose:" \
21 40 14 \
        "Branch:"   	1 1     "$VERSION"        	1 9 7 0 \
	"Menuconfig:"	2 1	"$menuconfig"  		2 13 2 0 \
	"Crosscompile:" 3 1	"$crosscompile" 	3 15 2 0 \
	""		4 1	""	 		4 14 0 0 \
	"Distributions"	5 1	""	 		5 14 0 0 \
	"Release:"	6 1	"$DISTRO_VERSION"  	6 10 15 0 \
	"Debian:"	7 1	"$debian" 		7 9 2 0 \
	"Devuan:"	8 1	"$devuan" 		8 9 2 0 \
	"Ubuntu:"	9 1	"$ubuntu"	 	9 9 2 0 \
	""		10 1	""	 		10 14 0 0 \
	"Wireless"	11 1	""	 		11 14 0 0 \
	"rtl88XXau:"	12 1	"$rtl88XXau"	 	12 12 2 0 \
	"rtl88X2bu:"	13 1	"$rtl88X2bu"	 	13 12 2 0 \
	"rtl88XXcu:"	14 1	"$rtl88XXcu"	 	14 12 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo VERSION='"' >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo debian= >> tmp0
echo devuan= >> tmp0
echo ubuntu= >> tmp0
echo rtl8812au= >> tmp0
echo rtl88x2bu= >> tmp0
echo rtl8811cu= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo verbose=0 >> tmp0
echo admin=1 >> tmp0
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
